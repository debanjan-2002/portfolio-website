<% layout('layouts/boilerplate') %> 

<div class="form-container flex flex-col md:flex-row md:justify-around justify-between md:items-stretch bg-[#02044a] md:max-w-5xl mx-auto my-4 p-4 md:p-8 text-white rounded-xl md:space-x-2">
    <div class="contact-info-container flex flex-col w-full md:w-80 items-center">
        <h1 class="text-4xl font-semibold md:self-start">Contact Me!</h1>
        <p class="font-light mt-6 text-lg">Fill up the form and I will get back to you in 24 hours</p>
        <div class="contact-info space-y-1 self-center mt-12">
            <div class="flex items-center space-x-2 border-2 border-[#02044a] rounded-md hover:border-blue-500 p-3">
                <%- include('../public/svg/phone.svg') %> 
                <div class="my-ph-no">+91 9073518139</div>
            </div>
            <div class="flex items-center space-x-2 border-2 border-[#02044a] rounded-md hover:border-blue-500 p-3">
                <%- include('../public/svg/contact_mail.svg') %>
                <div class="my-email">debanjan.edu.2002@gmail.com</div>
            </div>
            <div class="flex items-center space-x-2 border-2 border-[#02044a] rounded-md hover:border-blue-500 p-3">
                <%- include('../public/svg/address.svg') %>
                <div class="my-address">P-41 Green View, Kolkata</div>
            </div>
        </div>
        <div class="social-icons flex my-12 md:my-auto justify-center space-x-6">
            <div class="bg-white w-fit p-4 rounded-full">
                <a href="https://leetcode.com/debanjan2002/" target="_blank">
                    <%- include('../public/svg/leetcode.svg') %>
                </a>
            </div>
            <div class="bg-white w-fit p-4 rounded-full">
                <a href="https://github.com/debanjan-2002" target="_blank">
                    <%- include('../public/svg/github.svg') %>
                </a>
            </div>
            <div class="bg-white w-fit p-4 rounded-full">
                <a href="https://www.linkedin.com/in/debanjan-poddar/" target="_blank">
                    <%- include('../public/svg/linkedin.svg') %>
                </a>
            </div>
        </div>
    </div>
    <form action="/contact" method="POST" class="bg-white p-2 text-black rounded-xl w-full md:w-[26rem] space-y-4 px-4 md:px-9 mb-4 md:mb-0">
        <div>
            <label for="name" class="block mb-2">Your Name</label>
            <div class="flex border-2 border-gray-300 rounded-md focus-within:border-blue-500">
                <%- include('../public/svg/user.svg') %>
                <input type="text" name="name" id="name" class="focus:outline-none p-2 md:w-full rounded-md" placeholder="Name" required>
            </div>
        </div>
        <div>
            <label for="email" class="block mb-2">Mail</label>
            <div class="flex border-2 border-gray-300 rounded-md focus-within:border-blue-500">
                <%- include('../public/svg/form_mail.svg') %>
                <input type="email" name="email" id="email" class="focus:outline-none p-2 md:w-full rounded-md" placeholder="E-mail" required>
            </div>
        </div>
        <div>
            <label for="message" class="block mb-2">Message</label>
            <textarea name="message" id="message" cols="30" rows="8" placeholder="Message" class="border-2 border-gray-300 focus:outline-none p-2 w-full bg-[#f9f9fb] rounded-md resize-none focus-within:border-blue-500" required></textarea>
        </div>
        <div class="text-end">
            <button type="submit" class="bg-[#0c75ff] text-white p-2 px-6 rounded-md">Send Message</button>
        </div>
    </form>
</div>